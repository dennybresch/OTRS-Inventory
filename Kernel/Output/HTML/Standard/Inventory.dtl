				            	<tr>
				                	<td><a class="AsBlock" href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Item;ID=$LQData{"ID"}">$QData{"ID"}</a></td>
				                	<td>$Text{"$QData{"Typ","20"}"}</td>
