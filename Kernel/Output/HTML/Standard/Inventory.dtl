    <h1>$Text{"Manage Inventory"}</h1>
    
#####################
# SidebarColumnLeft #
#####################
    <div class="SidebarColumn">
    
#####################
#      Filter       #
#####################   
<!-- dtl:block:FilterItem -->
        <div class="WidgetSimple">
            <div class="Header">
                <h2><label for="FilterItem">$Text{"Filter for Item"}</label></h2>
            </div>
            <div class="Content">
                <input type="text" id="FilterItem" class="W95pc" name="FilterItem" value="" title="$Text{"Filter for Item"}" />
            </div>
        </div>
<!-- dtl:block:FilterItem -->       
#####################
#      Filter       #
##################### 
#####################
#    ActionList     #
#####################
<!-- dtl:block:ActionList -->       
        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Actions"}</h2>
            </div>
            <div class="Content">
                <ul class="ActionList">
                	<li>
				    	<a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Overview" class="CallForAction Fullsize Center"><span>$Text{"Overview"}</span></a>
                    </li>                    
					<li>
				 		<a class="CallForAction Fullsize Center Plus" href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Add">
                            <span>$Text{"Add Item"}</span>
                        </a>
				    </li>				    			    
                    <li>
                        <a href="$Env{"Baselink"}$Env{"LastStatsView"}" class="CallForAction Fullsize Center"><span>$Text{"Go to overview"}</span></a>
                    </li>
                </ul>
            </div>
        </div>
