#    ActionList     #
#####################
#####################
#       Hints       #
#####################
<!-- dtl:block:Hint -->
		<div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Hint"}</h2>
            </div>
            <div class="Content ">
                <p class="FieldExplanation">
                    $Text{"Create notifications for your agents and get an overview of all seen notifications."}
                </p>   
        	</div>
        </div>            
<!-- dtl:block:Hint -->    
